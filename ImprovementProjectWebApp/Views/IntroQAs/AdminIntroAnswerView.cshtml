@model IList<ImprovementProjectWebApp.Models.IntroQA>
@{
    ViewData["Title"] = "IntroAnswerView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Intro Answer View</h2>
<div class="list-group col-lg-12">
    @{
        if (Model != null)
        {
            foreach (var item in Model)
            {
            <div class="list-group-item col-lg-6">
                <div class="list-group-item list-group-item-secondary col-lg-12 ">
                    <label>Question: @item.IntroQuestion.Question</label>
                    <br />
                </div>
                <div class="list-group-item list-group-item-primary col-lg-12 ">
                    @if (item.Answer != null)
                    {
                        <label>Answer: @item.Answer</label>
                        <br />
                    }
                    else
                    {
                        <label class="label label-danger">User have not input anything yet</label>
                        <br />

                    }
                </div>
                @if (item.Answer != null)
                {
                    <div class="list-group-item list-group-item-primary col-lg-12 ">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                }
            </div>
            }
        }
        else
        {
            <div class="list-group-item list-group-item-primary col-lg-12 ">
                <p>User have not input anything yet</p>
            </div>

        }
        }
</div>
<div class="col-lg-12">

    <a class="btn btn-default col-lg-2 col-lg-offset-10" asp-action="ViewCustomer" asp-controller="Dashboard" asp-route-id="@ViewBag.UserId">返回</a>
</div>
<div class="clearfix"></div>
