@model ImprovementProjectWebApp.Models.Plan

@{
    ViewData["Title"] = "EditDayPlan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditDayPlan</h2>

<h4>Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDayPlan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div style="display:none;">
                <div class="form-group">
                    <label asp-for="DayPlanDate" class="control-label"></label>
                    <input asp-for="DayPlanDate" class="form-control" />
                    <span asp-validation-for="DayPlanDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DayPlanNum" class="control-label"></label>
                    <input asp-for="DayPlanNum" class="form-control" />
                    <span asp-validation-for="DayPlanNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WeekPlanId" class="control-label"></label>
                    <input asp-for="WeekPlanId" class="form-control" />

                    <span asp-validation-for="WeekPlanId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewPlan" asp-controller="Dashboard" asp-route-id="@ViewBag.ApplicationUserId">Back</a>
</div>

