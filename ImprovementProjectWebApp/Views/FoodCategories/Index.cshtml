@model IEnumerable<ImprovementProjectWebApp.Models.FoodCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Food Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info text-white"><i class="fa fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>

                    <th></th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>

                        <td style="width:150px;">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@item.Id"><i class="fa fa-list-alt"></i></a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id"><i class="fa fa-trash-o"></i></a>
                            </div>
                        </td>

                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Food Category exists...</p>
        }
    </div>
</div>
