@model ImprovementProjectWebApp.Models.WorkoutPlan



<h2>Create</h2>

<h4>WorkoutPlan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PlanName" class="control-label"></label>
                <input asp-for="PlanName" class="form-control" />
                <span asp-validation-for="PlanName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="OtherTypeExercise" id="otherTypeExercise" onclick='otherTypeExerciseChecked()' /> @Html.DisplayNameFor(model => model.OtherTypeExercise)
                    </label>
                </div>
            </div>
            <div id="SetsRepsDiv">
                <div class="form-group">
                    <label asp-for="Sets" class="control-label"></label>
                    <input asp-for="Sets" class="form-control" id="SetsInput" />
                    <span asp-validation-for="Sets" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reps" class="control-label"></label>
                    <input asp-for="Reps" class="form-control" id="RepsInput" />
                    <span asp-validation-for="Reps" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Des" class="control-label"></label>
                <input asp-for="Des" class="form-control" />
                <span asp-validation-for="Des" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>


            <div class="form-group">
                <label asp-for="ExerciseId" class="control-label"></label>
                <select asp-for="ExerciseId" class="form-control" asp-items="ViewBag.ExerciseId"></select>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    function otherTypeExerciseChecked() {
        if ($("#otherTypeExercise").prop('checked')) {
            $("#SetsInput").val(0);
            $("#SetsInput").prop('disabled', true);
            $("#RepsInput").val(0);
            $("#RepsInput").prop('disabled', true); // checked
            $("#SetsRepsDiv").hide()
        }
        else {
            $("#SetsInput").prop('disabled', false);
            $("#RepsInput").prop('disabled', false);
            $("#SetsRepsDiv").show()
        }
    }
</script>



