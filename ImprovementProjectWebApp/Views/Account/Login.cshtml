@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Emptylayout.cshtml";
}
<video preload="auto" autoplay="autoplay" type="video/mp4" src="~/images/bg4.mp4" loop="true" id="Video"></video>


<div class="row">
    <div class="">
        <section class="box">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h2>登陆</h2>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group inputBox">
                    <label asp-for="UserName">用户名：</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group inputBox">
                    <label asp-for="Password">密码：</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <div class="checkbox">
                        <label asp-for="RememberMe">


                            <input asp-for="RememberMe" />
                            保持登陆
                        </label>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    @*<button type="submit" class="btn btn-default" value="Log in">Log in</button>*@
                    <input type="submit" class="btn btn-default" value="登陆">

                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">忘记密码</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">注册新用户</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
