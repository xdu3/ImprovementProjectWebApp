@model ImprovementProjectWebApp.Models.FoodItem

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="text-info">Food Details</h2>
<br />



<div class="border backgroundWhite">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Protein" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Protein" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Carb" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Carb" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Fat" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Fat" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Calories" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Calories" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Active" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Active" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="FoodCategory" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="FoodCategory.Category" class="form-control" />
            </div>
        </div>





    </fieldset>
    <div class="form-group row">
        <div class="col-md-2">

        </div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-6">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info form-control">Edit</a>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</div>