@model ImprovementProjectWebApp.Models.Customer.FeedbacksListVM
@{
    ViewData["Title"] = "FeedbacksList";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>问题表</h2>
<div class="list-group-item col-lg-12">
    @foreach (var item in Model.FeedBacks)
    {
        <div class="list-group-item col-lg-12">
            <h4><strong>问题：</strong> </h4>
            <p>
                @item.Qustion
            </p>
            
        </div>
        @if (!string.IsNullOrEmpty(item.Answer))
        {
            <div class="list-group-item-info col-lg-12">
                <h4><strong>回答：</strong></h4>
                <p>
                    @item.Answer
                </p>
            </div>
        }
    }
</div>
            <div class="col-lg-12 " style="padding-right:0;">
                <br />
                <a asp-action="AddFeedbacks" asp-controller="Customer" class="btn btn-primary col-lg-2 col-lg-offset-10 ">提问</a>
            </div>
