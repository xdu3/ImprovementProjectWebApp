@model ImprovementProjectWebApp.Models.ApplicationUser
@{
    ViewData["Title"] = "AddPhasePlan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddPhasePlan</h2>
<form asp-controller="Plans" asp-action="AddPlan">
        Add Plan:
        <div class="row">
            <div class="col-lg-10">
                <input type="text" name="PlanName" class="form-control">
                <input type="hidden" value="@Model.Id" name="UserId" class="btn btn-default" />
                <input type="hidden" value="@ViewBag.AppUserPlanId" name="AppUserPlanId" class="btn btn-default" />
            </div>
            <div class="col-lg-2">
                <input type="submit" value="Add Plan" class="btn btn-default" />
            </div>
        </div>
</form>
