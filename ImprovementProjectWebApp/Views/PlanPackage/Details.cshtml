@model PlanPackage
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-info">Plan Package</h2>
<br />



<div class="border backgroundWhite">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Des" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <textarea class="form-control" asp-for="Des" rows="6"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Price" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Term" class="col-form-label">Term (weeks)</label>
            </div>
            <div class="col-md-5">
                <input asp-for="Term" type="number" class="form-control" />
            </div>

        </div>

    </fieldset>
        <div class="form-group row">
            <div class="col-md-2">

            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info form-control">Edit</a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
        
</div>


