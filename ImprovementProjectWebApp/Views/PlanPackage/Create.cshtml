@model PlanPackage
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-info">Create Plan Package</h2>
<br />


<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Des" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <textarea class="form-control" asp-for="Des" rows="6"></textarea>
            </div>
            <span asp-validation-for="Des" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Price" class="col-form-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Term" class="col-form-label">Term (weeks)</label>
            </div>
            <div class="col-md-5">
                <input asp-for="Term" type="number" class="form-control" />
            </div>

        </div>


        <div class="form-group row">
            <div class="col-md-2">

            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-info form-control" value="Create" />
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

